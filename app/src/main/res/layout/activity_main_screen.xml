<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerMainScreenForUser"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp"
    tools:context=".MainScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/user_screen_action_bar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:backgroundTint="#A31207"
            android:background="#A50D02"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/dg4">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/png"
                />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="15pt">
                <Button
                    android:id="@+id/b1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_margin="15dp"
                    android:background="#fff"
                    android:text="Create Report"
                    android:onClick="MoveToCreateReport"
                    android:layout_columnWeight="1"/>
                <Button
                    android:id="@+id/b2"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_margin="15dp"
                    android:background="#fff"
                    android:text="Tracking"
                    android:onClick="Tracking"
                    android:layout_columnWeight="1"/>
                <Button
                    android:id="@+id/b3"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_margin="15dp"
                    android:background="#fff"
                    android:text="Edit Profile"
                    android:onClick="EditProfile"
                    android:layout_columnWeight="1"/>
                <Button
                    android:id="@+id/b4"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_margin="15dp"
                    android:background="#fff"
                    android:onClick="Logout"
                    android:text="Logout"
                    android:layout_columnWeight="1"/>
            </GridLayout>

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="start">

        <include layout="@layout/main_user_screen_drawer" />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>