<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dg4"
    android:padding="5dp"
    tools:context="._6Login">
    <de.hdodenhof.circleimageview.CircleImageView

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="190dp"
        android:layout_height="175dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="13dp"
        android:src="@drawable/imagesplash"
        app:civ_border_width="1dp"
        android:layout_gravity="center_horizontal"
        app:civ_border_color="#FF000000"/>
    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email :"

        android:layout_margin="5dp"
        android:textSize="6pt"
        android:textStyle="bold"
        android:textColor="#130400"/>
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/emailTextField"
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="textEmailAddress"
        android:textColor="#130400"
        android:textSize="6pt"
        app:bootstrapBrand="info"
        app:bootstrapSize="md" />
    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:textColor="#130400"
        android:layout_margin="5dp"
        android:textSize="6pt"
        android:textStyle="bold"/>
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/passwordTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"

        android:hint="password"
        android:inputType="numberPassword"
        android:textColor="#130400"
        android:textSize="10pt"
        app:bootstrapBrand="info"
        android:layout_margin="5dp"
        app:bootstrapSize="md" />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="110dp"

        android:textSize="8pt"
        android:textStyle="bold"
        android:textColor="#130400"
        android:text="Login  As Center Admin"
        android:id="@+id/cheko"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="110dp"

        android:textSize="8pt"
        android:textStyle="bold"
        android:textColor="#130400"
        android:text="Login  As Driver"
        android:id="@+id/driver"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="40dp">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#130400"
            android:baselineAligned="false"

            android:text="Login"
            android:onClick="OnLoginButtonClicked"
            android:textStyle="bold"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />

    </LinearLayout>
    <TextView
        android:id="@+id/createAccountTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="9pt"
        android:textColor="#130400"

        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textDirection="firstStrong"
        android:onClick="OnSignupLabelClicked"
        />
</LinearLayout>